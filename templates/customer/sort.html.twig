{% extends 'base.html.twig' %}

{% block body %}
<table border=1>
    <tr>
        <th> Customer ID </th>
        <th> Customer Name </th>
        <th> Customer Birthday </th>
        <th> Young Driver </th>
    </tr>
    {% for c in customers %}
         <tr>
            <td> {{ c.id }} </td>
            <td> {{ c.name }}</td>
            <td> {{ c.birthdate | date('d/m/Y') }} </td>
            <td> 
            {% if c.isyoungdriver == 1 %}
                  True
            {% else %}
                  False
            {% endif %}     
            </td>
         </tr>
    {% endfor %}
</table>
{% endblock %}
